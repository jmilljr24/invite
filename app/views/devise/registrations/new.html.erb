<h2>Sign up</h2>
<% resource.build_profile %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%# f.label :password %>
    <%= f.hidden_field :password, value: "millertime2024"%>
  </div>
  <%= f.fields_for :profile do |profile| %>
    <div class="field">
      <%= profile.label :name %>
      <%= profile.text_field :name%>
    </div>
    <div class="field">
      <%= profile.label :guest %>
      <%= profile.text_field :guest%>
    </div>
    <div class="field">
      <%= profile.label :rehearsal, "Invite to Rehearsal Dinner?" %>
      <%= profile.check_box :rehearsal%>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
