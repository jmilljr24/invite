<div id="<%= dom_id profile %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= profile.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Guest:</strong>
    <%= profile.guest %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rehearsal:</strong>
    <%= profile.rehearsal %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Attending rehearsal:</strong>
    <%= profile.attending_rehearsal %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Attending wedding:</strong>
    <%= profile.attending_wedding %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= profile.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this profile", profile, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this profile", edit_profile_path(profile), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
